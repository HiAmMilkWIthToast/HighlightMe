<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Sunset Theme - Orange/Purple -->
    <!-- Brushes (using hardcoded colors for proper switching) -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1F1135"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#2D1B4E"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#150D28"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#3D2565"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#251540"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#3A2560"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#5A3A8A"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#F97316"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="#FB923C"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FDF4FF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#C4B5D0"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#8A7A9A"/>
    <SolidColorBrush x:Key="HighlightGlowBrush" Color="#F97316"/>
    <SolidColorBrush x:Key="HighlightBackgroundBrush" Color="#5A3055"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#4A3A6A"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1F1135" Offset="0"/>
        <GradientStop Color="#2D1B4E" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#4A3078" Offset="0"/>
        <GradientStop Color="#2A1A4A" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>
