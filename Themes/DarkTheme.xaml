<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme - Default -->
    <!-- Brushes (using hardcoded colors for proper switching) -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1A1A2E"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#16213E"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#0A0A1A"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#0F3460"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#12122A"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#2A2A4A"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#3A3A5A"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#E94560"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="#FF6B8A"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#505070"/>
    <SolidColorBrush x:Key="HighlightGlowBrush" Color="#FFD700"/>
    <SolidColorBrush x:Key="HighlightBackgroundBrush" Color="#3D5A80"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#404060"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1A1A2E" Offset="0"/>
        <GradientStop Color="#16213E" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1E3A5F" Offset="0"/>
        <GradientStop Color="#0F2544" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>
