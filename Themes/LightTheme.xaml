<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme -->
    <!-- Brushes (using hardcoded colors for proper switching) -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#F5F7FA"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#E8ECF1"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#F0F2F5"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#D0D5DD"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#E94560"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="#FF6B8A"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1A1A2E"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#667085"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#98A2B3"/>
    <SolidColorBrush x:Key="HighlightGlowBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="HighlightBackgroundBrush" Color="#FEF3C7"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#E4E7EC"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#F5F7FA" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#F5F7FA" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>
