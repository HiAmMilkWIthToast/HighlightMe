<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Ocean Theme - Blue/Teal -->
    <!-- Brushes (using hardcoded colors for proper switching) -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#0A192F"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#112240"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#071525"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1A365D"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#0D1F3C"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#1A3550"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#2D5A7B"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#64FFDA"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="#9EFFED"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#CCD6F6"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8892B0"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#5A6278"/>
    <SolidColorBrush x:Key="HighlightGlowBrush" Color="#64FFDA"/>
    <SolidColorBrush x:Key="HighlightBackgroundBrush" Color="#1A4A5A"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#2D4A6A"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#0A192F" Offset="0"/>
        <GradientStop Color="#112240" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#234E7A" Offset="0"/>
        <GradientStop Color="#112A4A" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>
