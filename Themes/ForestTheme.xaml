<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Forest Theme - Green Nature -->
    <!-- Brushes (using hardcoded colors for proper switching) -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1A2F1A"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#1E3A1E"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#122512"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#254525"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#162816"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#2A4A2A"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#3A6A3A"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#4ADE80"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="#86EFAC"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E2F5E2"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A0C0A0"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#608060"/>
    <SolidColorBrush x:Key="HighlightGlowBrush" Color="#FBBF24"/>
    <SolidColorBrush x:Key="HighlightBackgroundBrush" Color="#3A5A2A"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#3A5A3A"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1A2F1A" Offset="0"/>
        <GradientStop Color="#1E3A1E" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2D5A2D" Offset="0"/>
        <GradientStop Color="#1A3A1A" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>
