<Window x:Class="HighlightMe.Views.AppSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="âš™ï¸ Settings" 
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        ResizeMode="NoResize">
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" Padding="25,20">
            <StackPanel>
                <TextBlock Text="âš™ï¸ Settings" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="Customize themes, layout, and icons" 
                           FontSize="13" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Tab Content -->
        <TabControl Grid.Row="1" 
                    x:Name="SettingsTabs"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="20,15">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" 
                                        Background="#2A2A4A" 
                                        CornerRadius="8" 
                                        Padding="18,10" 
                                        Margin="0,0,8,0"
                                        Cursor="Hand">
                                    <ContentPresenter x:Name="ContentSite"
                                                      ContentSource="Header"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3A3A5A"/>
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True"/>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentLightBrush}"/>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </TabControl.Resources>
            
            <!-- Themes Tab -->
            <TabItem Header="ðŸŽ¨ Themes">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,15,0,0">
                    <StackPanel x:Name="ThemesPanel">
                        <TextBlock Text="Choose a Theme" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>
                        
                        <WrapPanel x:Name="ThemesList" Orientation="Horizontal"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Layout Tab -->
            <TabItem Header="ðŸ“ Layout">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="Card Size" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <StackPanel x:Name="CardSizePanel" Orientation="Horizontal" Margin="0,0,0,25"/>
                        
                        <TextBlock Text="Card Spacing" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="SpacingSlider" 
                                    Minimum="2" Maximum="20" 
                                    Value="8"
                                    VerticalAlignment="Center"
                                    ValueChanged="SpacingSlider_ValueChanged"/>
                            <TextBlock Grid.Column="1" 
                                       x:Name="SpacingValue"
                                       Text="8 px"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <TextBlock Text="Display Options" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <CheckBox x:Name="ShowDetailsCheckbox"
                                  Content="Show file details (size, type)"
                                  IsChecked="True"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  FontSize="14"
                                  Margin="0,5"
                                  Checked="ShowDetailsCheckbox_Changed"
                                  Unchecked="ShowDetailsCheckbox_Changed"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Icons Tab -->
            <TabItem Header="ðŸ–¼ï¸ Icons">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="Icon Pack" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>
                        
                        <StackPanel x:Name="IconPacksPanel"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource TertiaryBackgroundBrush}" Padding="25,15">
            <Grid>
                <Button x:Name="ResetButton"
                        Content="â†» Reset to Defaults"
                        HorizontalAlignment="Left"
                        Background="#3A3A5A"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        BorderThickness="0"
                        Padding="15,8"
                        Cursor="Hand"
                        Click="ResetButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button x:Name="CloseButton"
                        Content="âœ“ Done"
                        HorizontalAlignment="Right"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="25,8"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentLightBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
