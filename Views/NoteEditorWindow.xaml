<Window x:Class="HighlightMe.Views.NoteEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“ Quick Note"
        Height="320" Width="480"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Color Picker Button Style -->
        <Style x:Key="ColorButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="2"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="ðŸ“ Add Note" 
                   FontSize="20" FontWeight="Bold"
                   Foreground="#E0E0E0"
                   Margin="0,0,0,10"/>
        
        <!-- File Name -->
        <Border Grid.Row="1" Background="#252540" CornerRadius="8" Padding="10" Margin="0,0,0,15">
            <TextBlock x:Name="FileNameText"
                       Text="file.txt"
                       FontSize="13"
                       Foreground="#A0A0A0"
                       TextTrimming="CharacterEllipsis"/>
        </Border>
        
        <!-- Note Input -->
        <Border Grid.Row="2" Background="#252540" CornerRadius="8" Padding="5">
            <TextBox x:Name="NoteTextBox"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Background="Transparent"
                     Foreground="#E0E0E0"
                     BorderThickness="0"
                     FontSize="14"
                     Padding="10"
                     CaretBrush="#FFD700"/>
        </Border>
        
        <!-- Color Picker and Buttons -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Color Picker -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Color:" Foreground="#808090" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button x:Name="YellowColor" Width="28" Height="28" Background="#FFEB3B" Click="ColorButton_Click" Tag="#FFEB3B" Margin="2" Style="{StaticResource ColorButtonStyle}"/>
                <Button x:Name="PinkColor" Width="28" Height="28" Background="#FF6B6B" Click="ColorButton_Click" Tag="#FF6B6B" Margin="2" Style="{StaticResource ColorButtonStyle}"/>
                <Button x:Name="GreenColor" Width="28" Height="28" Background="#4CAF50" Click="ColorButton_Click" Tag="#4CAF50" Margin="2" Style="{StaticResource ColorButtonStyle}"/>
                <Button x:Name="BlueColor" Width="28" Height="28" Background="#2196F3" Click="ColorButton_Click" Tag="#2196F3" Margin="2" Style="{StaticResource ColorButtonStyle}"/>
                <Button x:Name="PurpleColor" Width="28" Height="28" Background="#9C27B0" Click="ColorButton_Click" Tag="#9C27B0" Margin="2" Style="{StaticResource ColorButtonStyle}"/>
            </StackPanel>
            
            <!-- Delete Button -->
            <Button Grid.Column="2" 
                    x:Name="DeleteButton"
                    Content="ðŸ—‘ï¸ Delete" 
                    Click="DeleteButton_Click"
                    Background="#3A3A5A"
                    Foreground="#FF6B6B"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    Style="{StaticResource RoundedButtonStyle}"/>
            
            <!-- Save Button -->
            <Button Grid.Column="3" 
                    Content="ðŸ’¾ Save" 
                    Click="SaveButton_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="20,8"
                    Cursor="Hand"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
    </Grid>
</Window>

