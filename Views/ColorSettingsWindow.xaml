<Window x:Class="HighlightMe.Views.ColorSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸŽ¨ Category Colors"
        Height="550" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="ColorButtonStyle">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="2"
                                BorderBrush="#3A3A5A">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸŽ¨ Category Glow Colors" 
                       FontSize="22" FontWeight="Bold"
                       Foreground="#E0E0E0"/>
            <TextBlock Text="Customize highlight colors for different file types"
                       FontSize="13" Foreground="#808090" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Category List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="CategoryPanel">
                <!-- Categories will be added programmatically -->
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reset to Defaults" 
                    Click="ResetButton_Click"
                    Background="#3A3A5A"
                    Foreground="#A0A0A0"
                    BorderThickness="0"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>
            <Button Content="Close" 
                    Click="CloseButton_Click"
                    Background="#3D5A80"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="30,10"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
