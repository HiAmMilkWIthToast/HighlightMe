<Window x:Class="HighlightMe.Views.HighlightOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Highlight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        IsHitTestVisible="False"
        ResizeMode="NoResize">
    
    <Grid>
        <!-- Outer glow effect -->
        <Border x:Name="GlowBorder"
                CornerRadius="8"
                BorderThickness="4"
                BorderBrush="#FFD700"
                Background="Transparent"
                Margin="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                  ShadowDepth="0" 
                                  Color="#FFD700" 
                                  Opacity="0.9"/>
            </Border.Effect>
        </Border>
        
        <!-- Inner pulse animation border -->
        <Border x:Name="PulseBorder"
                CornerRadius="8"
                BorderThickness="2"
                BorderBrush="#FFFFFF"
                Background="Transparent"
                Margin="12"
                Opacity="0.7">
            <Border.Effect>
                <BlurEffect Radius="2"/>
            </Border.Effect>
        </Border>
        
        <!-- Animated highlight -->
        <Border x:Name="AnimatedBorder"
                CornerRadius="8"
                Background="#20FFD700"
                Margin="10">
            <Border.Triggers>
                <EventTrigger RoutedEvent="Border.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <DoubleAnimation Storyboard.TargetName="AnimatedBorder"
                                             Storyboard.TargetProperty="Opacity"
                                             From="0.3" To="0.7"
                                             Duration="0:0:0.8"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
        </Border>
    </Grid>
</Window>
