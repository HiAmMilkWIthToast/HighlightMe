<Window x:Class="HighlightMe.Views.HelpGuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HighlightMe - User Guide"
        Height="650" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E"
        ResizeMode="CanResizeWithGrip">
    
    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
        
        <Style x:Key="FeatureItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#252545"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        
        <Style x:Key="FeatureTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <Style x:Key="FeatureDescStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#A0A0B0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#252550" Padding="25,20">
            <StackPanel>
                <TextBlock Text="ðŸ“– HighlightMe User Guide" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="#FFFFFF"/>
                <TextBlock Text="Learn how to find files on your desktop instantly" 
                           FontSize="13" Foreground="#8080A0" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25,10">
            <StackPanel>
                
                <!-- Getting Started -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸš€ Getting Started"/>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="ðŸ” Search for Files"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Type in the search box to find files by name. Results update as you type. Click the dropdown arrow to see your recent searches."/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="ðŸ“„ Search Inside Files"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Click the ðŸ“„ icon next to the search box to search inside text files (under 1MB). This finds files containing your search term, not just matching filenames."/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="ðŸ“‚ Open Files &amp; Folders"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Double-click any item to open it. Right-click for more options like Preview, Open Location, Copy Path, or Add Notes."/>
                    </StackPanel>
                </Border>
                
                <!-- Visual Features -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="âœ¨ Visual Highlighting Features"/>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="âœ¨ Desktop Glow"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Creates glowing highlights around matching icons directly on your Windows desktop. Makes it easy to spot files visually!"/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="ðŸ”´ New Items"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Highlights files that were recently added to your desktop. Red badges help you quickly spot what's new since your last check."/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="â†—ï¸ Arrows"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Shows animated bouncing arrows pointing to matching files on your desktop. Great for quickly locating files when you have many icons!"/>
                    </StackPanel>
                </Border>
                
                <!-- Customization -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸŽ¨ Customization"/>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="ðŸŽ¨ Categories"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Customize colors for different file types. Set distinct colors for Documents, Images, Videos, Audio, and more to make each category stand out."/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="âš™ï¸ Settings"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Change themes (Dark, Light, Midnight Blue), adjust card sizes, icon sizes, and other appearance options to suit your preferences."/>
                    </StackPanel>
                </Border>
                
                <!-- Tips -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸ’¡ Tips &amp; Tricks"/>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="ðŸ“‹ Right-Click Menu"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Right-click any file card for quick actions: Preview (view text/images), Open Location (show in Explorer), Copy Path, Add Notes, Hide/Unhide, and Lock/Unlock files."/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="ðŸ“ Grid vs List View"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Toggle between Grid view (visual cards) and List view (detailed table) using the Grid/List button. List view shows more details like file size and dates."/>
                    </StackPanel>
                </Border>
                
                <Border Style="{StaticResource FeatureItemStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource FeatureTitleStyle}" Text="â†» Refresh"/>
                        <TextBlock Style="{StaticResource FeatureDescStyle}" 
                                   Text="Click Refresh after adding or removing files from your desktop to update the list. The app also watches for changes automatically."/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#252550" Padding="25,15">
            <Grid>
                <TextBlock Text="Hover over any button to see its tooltip!" 
                           Foreground="#8080A0" FontSize="12" VerticalAlignment="Center"/>
                <Button Content="Got it!" 
                        HorizontalAlignment="Right"
                        Padding="25,10"
                        FontSize="14"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="#4A6FA5" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#5A7FB5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
