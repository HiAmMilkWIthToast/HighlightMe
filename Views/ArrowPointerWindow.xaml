<Window x:Class="HighlightMe.Views.ArrowPointerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arrow"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        IsHitTestVisible="False"
        Width="60" Height="80"
        ResizeMode="NoResize">
    
    <Grid>
        <!-- Animated bouncing arrow pointing down -->
        <Canvas x:Name="ArrowCanvas">
            <Path x:Name="ArrowPath" 
                  Fill="#FFD700"
                  Stroke="#FFFFFF"
                  StrokeThickness="2"
                  Canvas.Left="10"
                  Canvas.Top="0">
                <Path.Data>
                    <!-- Arrow pointing down -->
                    <PathGeometry>
                        <PathFigure StartPoint="20,0" IsClosed="True">
                            <LineSegment Point="40,0"/>
                            <LineSegment Point="40,35"/>
                            <LineSegment Point="55,35"/>
                            <LineSegment Point="30,65"/>
                            <LineSegment Point="5,35"/>
                            <LineSegment Point="20,35"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
                <Path.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.7" Color="#000000"/>
                </Path.Effect>
                <Path.RenderTransform>
                    <TranslateTransform x:Name="ArrowTranslate" Y="0"/>
                </Path.RenderTransform>
            </Path>
        </Canvas>
        
        <!-- Bounce animation -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <DoubleAnimation 
                            Storyboard.TargetName="ArrowTranslate"
                            Storyboard.TargetProperty="Y"
                            From="0" To="15" 
                            Duration="0:0:0.4"
                            AutoReverse="True">
                            <DoubleAnimation.EasingFunction>
                                <QuadraticEase EasingMode="EaseInOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>
