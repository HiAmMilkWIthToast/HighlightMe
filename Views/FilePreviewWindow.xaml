<Window x:Class="HighlightMe.Views.FilePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ‘ï¸ File Preview"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E"
        ResizeMode="CanResize"
        MinHeight="300" MinWidth="400">
    
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   x:Name="HeaderText"
                   Text="ðŸ‘ï¸ Preview" 
                   FontSize="20" FontWeight="Bold"
                   Foreground="#E0E0E0"
                   Margin="0,0,0,10"/>
        
        <!-- File Info -->
        <Border Grid.Row="1" Background="#252540" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="FileNameText"
                           Text="filename.txt"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#E0E0E0"
                           TextTrimming="CharacterEllipsis"/>
                <TextBlock x:Name="FileInfoText"
                           Text="Size: 1.2 KB | Modified: 12/15/2024"
                           FontSize="11"
                           Foreground="#808090"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <Border Grid.Row="2" Background="#252540" CornerRadius="8">
            <Grid>
                <!-- Text Preview -->
                <ScrollViewer x:Name="TextPreviewArea" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Visibility="Collapsed">
                    <TextBox x:Name="TextContent"
                             IsReadOnly="True"
                             Background="Transparent"
                             Foreground="#E0E0E0"
                             BorderThickness="0"
                             FontFamily="Consolas"
                             FontSize="12"
                             Padding="15"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </ScrollViewer>
                
                <!-- Image Preview -->
                <Grid x:Name="ImagePreviewArea" Visibility="Collapsed">
                    <Image x:Name="ImageContent"
                           Stretch="Uniform"
                           Margin="10"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Grid>
                
                <!-- Unsupported Type Message -->
                <StackPanel x:Name="UnsupportedArea" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="ðŸ“„" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Preview not available for this file type"
                               Foreground="#808090"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Double-click to open with default application"
                               Foreground="#606070"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Open Button -->
            <Button Grid.Column="1" 
                    x:Name="OpenButton"
                    Content="ðŸ“‚ Open File" 
                    Click="OpenButton_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    ToolTip="Open file with default application"
                    Style="{StaticResource RoundedButtonStyle}"/>
            
            <!-- Close Button -->
            <Button Grid.Column="2" 
                    Content="âœ• Close" 
                    Click="CloseButton_Click"
                    Background="#3A3A5A"
                    Foreground="#E0E0E0"
                    Padding="20,10"
                    Cursor="Hand"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
    </Grid>
</Window>
